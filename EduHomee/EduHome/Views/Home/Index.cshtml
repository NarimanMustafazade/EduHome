<!-- Event Area Start -->
<div class="event-area two text-center pt-100 pb-145">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title">
                    <img src="img/icon/section.png" alt="section-title">
                    <h2>UPCOMMING EVENTS</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (Event events in Model.Events)
            {
                <div class="col-md-6 col-sm-12 col-xs-12">
                    <div class="single-event mb-35">
                        <div class="event-img">
                            <a><img src="~/img/event/@events.Image" alt="event"></a>
                        </div>
                        <div class="event-content text-left">
                            <h3>@events.CreatedTime.ToString("dd MMMM yyyy")</h3>
                            <h4><a asp-controller="Events" asp-action="Index">@events.Name</a></h4>
                            <ul>
                                <li><i class="fa fa-clock-o"></i>9.00 AM - 4.45 PM</li>
                                <li><i class="fa fa-map-marker"></i>@events.City</li>
                            </ul>
                            <div class="event-content-right">
                                <a class="default-btn" asp-controller="Events" asp-action="Index">join now</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Event Area End -->
<!-- Testimonial Area Start -->
<div class="testimonial-area pt-110 pb-105 text-center">
    <div class="container">
        <div class="row">
            @foreach (FeedBack feedbacks in Model.FeedBacks)
            {
                <div class="testimonial-owl owl-theme owl-carousel">
                    <div class="col-md-8 col-md-offset-2 col-sm-12">
                        <div class="single-testimonial">
                            <div class="testimonial-info">
                                <div class="testimonial-img">
                                    <img src="~/img/testimonial/@feedbacks.Image" alt="testimonial">
                                </div>
                                <div class="testimonial-content">
                                    <p>@feedbacks.Description</p>
                                    <h4>@feedbacks.Name</h4>
                                    <h5>@feedbacks.Specialty</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Testimonial Area End -->
<!-- Blog Area Start -->
<div class="blog-area pt-150 pb-150">
